<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.esi.easyorder">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.esi.easyorder.activites.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.esi.easyorder.activites.RegisterActivity" />

        <service android:name="com.esi.easyorder.services.ServerService" />

        <activity android:name="com.esi.easyorder.activites.MenuActivity" />
        <activity android:name="com.esi.easyorder.activites.SectionActivity" />
        <activity android:name="com.esi.easyorder.activites.CategoryActivity" />
        <activity android:name="com.esi.easyorder.activites.ItemActivity" />
        <activity android:name="com.esi.easyorder.activites.CartActivity" />
        <activity android:name="com.esi.easyorder.activites.SettingsActivity" />
        <activity android:name="com.esi.easyorder.activites.ViewOrderActivity" />
    </application>

</manifest>